Use these commands to install all necessary pytyhon packages and the CRF

yes | sudo apt-get install software-properties-common

sudo add-apt-repository ppa:ubuntu-toolchain-r/test

sudo apt-get update

yes | sudo apt-get install gcc-4.9 g++-4.9

yes | sudo update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-4.9 60
yes | sudo update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-4.9 60

git clone https://github.com/mbickel/DenseInferenceWrapper.git
cd denseinferencewrapper
make all
pip install .

pip install psutil sklearn natsort
easy_install -f http://www.simpleitk.org/SimpleITK/resources/software.html -U SimpleITK